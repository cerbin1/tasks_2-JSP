<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Tasks</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- FILTER-DEFINITIONS-START -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>AuthenticationFilter</filter-class>
    </filter>
    <!-- FILTER-DEFINITIONS-END -->

    <!-- SERVLET-DEFINITIONS-START -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivateUserServlet</servlet-name>
        <servlet-class>ActivateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTaskServlet</servlet-name>
        <servlet-class>CreateTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TasksServlet</servlet-name>
        <servlet-class>Tasks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditTaskServlet</servlet-name>
        <servlet-class>EditTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyTasksServlet</servlet-name>
        <servlet-class>MyTasks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskDetailsServlet</servlet-name>
        <servlet-class>TaskDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveTaskServlet</servlet-name>
        <servlet-class>RemoveTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByNameServlet</servlet-name>
        <servlet-class>SearchByName</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationsServlet</servlet-name>
        <servlet-class>Notifications</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveNotificationServlet</servlet-name>
        <servlet-class>RemoveNotification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPanelServlet</servlet-name>
        <servlet-class>AdminPanel</servlet-class>
    </servlet>
    <!-- SERVLET-DEFINITIONS-END -->


    <!-- SERVLET-MAPPINGS-START -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivateUserServlet</servlet-name>
        <url-pattern>/activate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTaskServlet</servlet-name>
        <url-pattern>/createTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TasksServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditTaskServlet</servlet-name>
        <url-pattern>/editTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyTasksServlet</servlet-name>
        <url-pattern>/myTasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskDetailsServlet</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveTaskServlet</servlet-name>
        <url-pattern>/removeTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchByNameServlet</servlet-name>
        <url-pattern>/searchByName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationsServlet</servlet-name>
        <url-pattern>/notifications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveNotificationServlet</servlet-name>
        <url-pattern>/removeNotification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPanelServlet</servlet-name>
        <url-pattern>/adminPanel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPanelServlet</servlet-name>
        <url-pattern>/removeUser</url-pattern>
    </servlet-mapping>
    <!-- SERVLET-MAPPINGS-END -->


    <!-- FILTER-MAPPINGS-START -->
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <!-- FILTER-MAPPINGS-END -->


    <!-- SERVLET-LISTENERS-START -->
    <listener>
        <listener-class>
            conf.MyServletContextListener
        </listener-class>
    </listener>
    <!-- SERVLET-LISTENERS-END -->


</web-app>