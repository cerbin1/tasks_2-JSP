<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Tasks</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- SERVLET-DEFINITIONS-START -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivateUserServlet</servlet-name>
        <servlet-class>ActivateUser</servlet-class>
    </servlet>
    <!-- SERVLET-DEFINITIONS-END -->


    <!-- SERVLET-MAPPINGS-START -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivateUserServlet</servlet-name>
        <url-pattern>/activate</url-pattern>
    </servlet-mapping>
    <!-- SERVLET-MAPPINGS-END -->


    <!-- SERVLET-LISTENERS-START -->
    <listener>
        <listener-class>
            conf.MyServletContextListener
        </listener-class>
    </listener>
    <!-- SERVLET-LISTENERS-END -->


</web-app>